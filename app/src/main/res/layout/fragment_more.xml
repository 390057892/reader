<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appBg"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/appBg"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        app:contentInsetStart="0dp"
        app:elevation="4dp"
        app:title="@string/more"
        app:titleTextAppearance="@style/Toolbar.TitleText">

    </androidx.appcompat.widget.Toolbar>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_idea"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/bg_touch"
        android:text="@string/opinions" />

    <View
        style="@style/line" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_appraise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_appraise"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/bg_touch"
        android:text="@string/appraise" />

    <View
        style="@style/line" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_setting"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/bg_touch"
        android:text="@string/setting" />

    <View
        style="@style/line" />

</androidx.appcompat.widget.LinearLayoutCompat>